{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "trailingSlash": false,
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.@(png|jpg|jpeg|webp|avif|gif|svg|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(pdf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=432000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/feed",
        "destination": "/feed.xml"
      },
      {
        "source": "/sitemap",
        "destination": "/sitemap.xml"
      },
      {
        "source": "/support",
        "destination": "/sponsor"
      }
    ]
  }
}
