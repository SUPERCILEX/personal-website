{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "trailingSlash": false,
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/feed",
        "destination": "/feed.xml"
      },
      {
        "source": "/sitemap",
        "destination": "/sitemap.xml"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(png|jpg|jpeg|webp|gif|svg|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7776000"
          }
        ]
      },
      {
        "source": "**/*.@(pdf)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=432000"
          }
        ]
      }
    ]
  }
}
